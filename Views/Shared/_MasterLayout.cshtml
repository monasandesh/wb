                <section class="sidebar">
                    <!-- Sidebar user panel -->
                    <div class="user-panel">
                        <div class="pull-left image">
                            @*"~/Content/dist/img/user2-160x160.jpg"*@
                            <img src="@Url.Content(ApplicationManager.UserAvatar)" class="img-circle" alt="User Image">
                        </div>
                        <div class="pull-left info">
                            <p>@ApplicationManager.UserFullName</p>

                                        @Html.ActionLink("Profile", "UserProfile", "Account", null, new { @class = "btn btn-default btn-flat" })
                                    </div>
                                    <div class="pull-right">
                                        @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "btn btn-default btn-flat" })
                                    </div>

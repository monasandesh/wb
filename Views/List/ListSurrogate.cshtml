@model IEnumerable<Surrogacy.Models.ListSurrogate>
@using Surrogacy.Helper
@using Surrogacy.Util
@{
    ViewBag.Title = ApplicationManager.ApplicationName + " | List Surrogate";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Details</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        

        <div class="row">
            <div class="col-xs-10">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Surrogate Listing</h3>
                        <div class="box-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                            </div>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>DOB</th>
                                <th>AGE</th>
                                <th>Height</th>
                                <th>Weight</th>
                                <th>Citizen</th>
                                @if (ApplicationManager.LoggedInUser.UserRoleName == "Doctor")
                                {
                                <th>Approval Status</th> }
                                
                            </tr>
                            @foreach (var data in Model)
                            {
                                <tr>
                                    <td><a href="">@data.FirstName</a></td>
                                    <td>@data.LastName</td>
                                    <td>@data.EmailID</td>
                                    <td>@data.DOB</td>
                                    <td>@data.Age</td>
                                    <td>@data.Height</td>
                                    <td>@data.Weight</td>
                                    <td>@data.Citizenship</td>
                                    @if (ApplicationManager.LoggedInUser.UserRoleName == "Doctor")
                                    {
                                        <td>@data.ApprovalStatus</td>
                                    }
                                </tr>
                            }

                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">

    </div>
    <!-- /.box-footer-->
    <!-- /.box -->
</section>
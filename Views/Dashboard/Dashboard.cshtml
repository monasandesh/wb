@model IEnumerable<Surrogacy.Models.Dashboard>
@using Surrogacy.Helper
@using Surrogacy.Util
@{
    ViewBag.Title = ApplicationManager.ApplicationName + " | Dashboard";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

 <!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Infor Page
        <small>it all starts here</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Dashboard</a></li>
        <li class="active">Info page</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Details</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <class="col-md-10">
                <p class="text-center">
                    <strong>Form Progress</strong>
                </p>
                <div class="progress-group">
                    <span class="progress-text">Application Form </span>
                    <span class="progress-number"><b>1</b>/8</span>
                    <div class="progress sm">
                        <div class="progress-bar progress-bar-aqua" style="width: @Model.First().Percentage% "></div>
                    </div>
                </div>
           </div>

                <div class="row">
                    <div class="col-xs-10">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">Form Submition Details and its Approval Status</h3>
                                <div class="box-tools">
                                    <div class="input-group input-group-sm" style="width: 150px;">
                                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                                        <div class="input-group-btn">
                                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body table-responsive no-padding">
                                <table class="table table-hover">
                                    <tr>
                                        <th>Number</th>
                                        <th>Form</th>
                                        <th>Status</th>
                                        <th>Is Submited?</th>
                                    </tr>
                                    @foreach (var data in Model)
                                    {
                                        <tr>
                                            <td>@data.ID</td>
                                            <td>@data.FormName</td>
                                            <td>
                                                @if (data.ApprovalStatus == "N/A")
                                                {
                                                    <span class="label label-primary">
                                                        @data.ApprovalStatus
                                                    </span>
                                                }
                                                @if (data.ApprovalStatus == "Approved")
                                                {
                                                    <span class="label label-success">
                                                        @data.ApprovalStatus
                                                    </span>
                                                }

                                                @if (data.ApprovalStatus == "Pending")
                                                {
                                                    <span class="label label-warning">
                                                        @data.ApprovalStatus
                                                    </span>
                                                } @if (data.ApprovalStatus == "Rejected")
                                                {
                                                    <span class="label label-danger">
                                                        @data.ApprovalStatus
                                                    </span>
                                                }
                                            </td>

                                            <td>@data.IsSubmitted </td>
                                        </tr>
                                    }

                                </table>
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>
                </div>
            </div>
        <!-- /.box-body -->
        <div class="box-footer">
            
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->

